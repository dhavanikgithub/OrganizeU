<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMainAddAcademic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_admin.fragments.academic.add_academic.AddAcademicFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbLayoutAcademicData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        android:contentDescription="test"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpAcademicData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tbLayoutAcademicData"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="test" />
</androidx.constraintlayout.widget.ConstraintLayout>